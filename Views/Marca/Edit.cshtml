@model MVC_AUTOSALONI.Models.Entities.Marca

<h1>Modifica Marca</h1>

@if (Model is null)
{
	<h1>Nessun record trovato con questo ID</h1>
}
else
{
	<form method="post">

		<div class="mt-3 d-none">
			<label class="form-label">ID</label>
			<input type="text" class="form-control" asp-for="ID_Marca" />
		</div>
		<div class="mt-3">
			<label class="form-label">Marca</label>
			<input type="text" class="form-control" asp-for="marca" />
		</div>
		<div class="mt-3">
			<button type="submit" class="btn btn-primary">Modifica</button>
			<button type="submit" class="btn btn-danger ms-3" asp-asp-controller="Marca" asp-action="Delete">Elimina</button>
		</div>
	</form>
}