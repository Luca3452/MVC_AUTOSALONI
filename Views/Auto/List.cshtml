@model List<MVC_AUTOSALONI.Models.Entities.Auto>

<h1>Elenco Auto</h1>

<table class="table">
    <thead>
        <tr>
            @* <th>Id</th> *@
            <th>Marca</th>
            <th>Modello</th>
            <th>Data d'acquisto</th>
            <th>Targa</th>
            <th>Prezzo Offerto</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var mod in Model)
        {
            <tr>
                @* <td>@stu.Id</td> *@
                <td>@Html.DisplayFor(Model => mod.Modello.Marca.marca)</td>
                <td>@Html.DisplayFor(Model => mod.Modello.modello)</td>
                <td>@mod.data_acquisto.Date.ToString("d")</td>
                <td>@mod.targa</td>
                <td>@mod.prezzo_offerto</td>
                <td><a class="btn btn-primary" asp-controller="Auto" asp-action="Edit" asp-route-id="@mod.ID_auto">Modifica</a></td>
            </tr>
        }
    </tbody>
</table>

